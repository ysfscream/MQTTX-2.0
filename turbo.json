{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build:cli": {
      "dependsOn": ["^build:cli"],
      "outputs": ["dist/**", "release/**"]
    },
    "build:web": {
      "dependsOn": ["^build:web"],
      "outputs": ["dist/**"]
    },
    "build:win": {
      "dependsOn": ["^build:win"],
      "outputs": ["dist/**", "out/**"]
    },
    "build:linux": {
      "dependsOn": ["^build:linux"],
      "outputs": ["dist/**", "out/**"]
    },
    "build:mac": {
      "dependsOn": ["^build:mac"],
      "outputs": ["dist/**", "out/**"]
    },
    "build:ui": {
      "dependsOn": ["^build:ui"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:desktop": {
      "dependsOn": ["^build:ui"],
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "dev:cli": {
      "cache": false,
      "persistent": true
    }
  }
}
